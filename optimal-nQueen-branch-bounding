package Java;

import java.util.*;

// Optimal N-Queen Problem using Branch Bounding

public class NQueenBounding {

    static boolean solutionFound=false;

    static void solve(int col,int [][] board, int n, HashMap<Integer,Boolean>leftRow,int upperDiagonal[],int lowerDiagonal[])
    {       
        if(col==n)
        {
            for(int i=0;i<board.length;i++)
            {
                for(int j=0;j<board.length;j++)
                {

                    System.out.print(" "+board[i][j]);
                }
                System.out.println();
            }
            System.out.println();
            solutionFound=true;
        }

        for(int row=0;row<n;row++)
        {
            if(!leftRow.get(row) && lowerDiagonal[row + col] == 0 && upperDiagonal[board.length - 1 + col - row] == 0)
            {
                board[row][col]=1;

                leftRow.put(row, true);
                lowerDiagonal[row + col] = 1;
                upperDiagonal[board.length - 1 + col - row] = 1;

                solve(col+1, board, n,leftRow,upperDiagonal,lowerDiagonal);

                if(solutionFound)
                {
                    return;
                }
                board[row][col]=0;
                leftRow.put(row, false);
                lowerDiagonal[row + col] = 0;
                upperDiagonal[board.length - 1 + col - row] = 0;
            }
        }
    }
    public static void main(String[] args) {
        int n=8;
        int board[][]=new int[n][n];
        HashMap<Integer,Boolean> leftRow = new HashMap<>(n,n);
        for (int i = 0; i < n; i++) {
            leftRow.put(i, false);
        }
        int upperDiagonal[] = new int[2 * n - 1];
        int lowerDiagonal[] = new int[2 * n - 1];
        solve(0,board,n,leftRow,upperDiagonal,lowerDiagonal);
    }
    
}
